{
  // https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "jest",
      "request": "launch",
      "protocol": "inspector",
      "args": ["--runInBand", "--updateSnapshot", "${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart",
      // "sourceMaps": true,
      "stopOnEntry": false,
      // "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "node",
      "name": "jest-in-windows",
      "request": "launch",
      "protocol": "inspector",
      "args": ["--runInBand", "--updateSnapshot", "'${relativeFile}'"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "sourceMaps": true,
      "stopOnEntry": false,
      // "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "node",
      "name": "jest-watch",
      "request": "launch",
      "protocol": "inspector",
      "args": [
        "--runInBand",
        "--watch",
        "--updateSnapshot",
        "'${relativeFile}'"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "stopOnEntry": false,
      // "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/.bin/jest"
    },
    {
      "type": "node",
      "name": "jest-curDir",
      "request": "launch",
      "protocol": "inspector",
      "args": [
        "${relativeFileDirname}",
        "--coverage=true",
        "--config='${workspaceFolder}/jest.config.js'",
        "--watch",
        "--updateSnapshot",
        "--testPathPattern='${relativeFileDirname}'"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "stopOnEntry": false,
      "program": "${workspaceFolder}/node_modules/.bin/jest"
    },
    {
      "type": "node",
      "name": "ts-node",
      "request": "launch",
      "protocol": "inspector",
      "env": { "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.dev.json" },
      "args": ["-r", "ts-node/register", "./${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "sourceMaps": true,
    },
    {
      "type": "pwa-chrome",
      "name": "chrome soil",
      "request": "launch",
      "sourceMaps": true,
      "url": "http://localhost:6006", // 需要访问的页面
      "webRoot": "${workspaceFolder}/packages/soil",
      "breakOnLoad": true,
      "supportsLoadedScriptRequest": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/umi/**/*.js",
        "${workspaceFolder}/node_modules/scheduler/**/*.js",
        "${workspaceFolder}/packages/react/src/.umi/**/*.js",
        "node_modules/**/*.js",
        "react.development.js",
        "react-dom.development.js",
        "<node_internals>/**"
      ]
      // "preLaunchTask": "@formily/antd: start"
    }
  ]
}
